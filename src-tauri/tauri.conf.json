{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "CodeForwarder",
  "version": "0.1.12",
  "identifier": "com.mweinbach.codeforwarder",
  "build": {
    "beforeDevCommand": "bun run sync:cli-proxy-binary && bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run sync:cli-proxy-binary && bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "CodeForwarder",
        "width": 800,
        "height": 600,
        "resizable": true,
        "decorations": false,
        "center": true,
        "label": "main",
        "visible": true,
        "closable": true,
        "minimizable": true,
        "maximizable": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "createUpdaterArtifacts": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "resources/*"
    ]
  },
  "plugins": {
    "updater": {
      "active": true,
      "endpoints": [
        "https://github.com/mweinbach/CodeForwarder/releases/latest/download/latest.json"
      ],
      "dialog": false,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDM2RTZDMzdFOUE2M0I0QTQKUldTa3RHT2Fmc1BtTmh6bVNiRGFiQ2JTcDRBMVVVYVpvc1FtVVhRbEViUWh2eTlNLzdaUUU2ckMK"
    }
  }
}
